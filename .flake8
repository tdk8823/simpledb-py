[flake8]
max-line-length = 120
ignore =
  # E203 whitespace before ':'
  # This is incompatible with black, see: https://github.com/psf/black/issues/315
  E203,
  # W503: Line break occurred before a binary operator
  # This is old warning and should be disabled, see: https://www.flake8rules.com/rules/W503.html
  W503,
  # E231: Missing whitespace after ',', ';', or ':'
  # This is incompatible with black. Example: ``{"a": {"b": 1.0}, "c": {"d": 2.0},}``
  E231
